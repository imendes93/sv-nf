manifest {

    name = "sv-nf"
    mainScript = "main.nf"
    version = "0.1"

}

params {
    platformHTTP = null
    reportHTTP = null
}


process {
    cpus = 4
    memory = {8.Gb*task.attempt}

    errorStrategy = { task.attempt <= 2 ? "retry" : "ignore" }
    maxRetries = 2

    containers = "imendes93/svnf:latest"
}

docker {
    runOptions = "--platform linux/amd64 -u \$(id -u):\$(id -g)"
}


executor {
  $local {
      cpus = 4
  }
}

singularity {
    cacheDir = "$HOME/.singularity_cache"
    autoMounts = true
}

trace {
    enabled = true
    file = "pipeline_stats.txt"
    fields = "task_id,\
              hash,\
              process,\
              tag,\
              status,\
              exit,\
              start,\
              container,\
              cpus,\
              time,\
              disk,\
              memory,\
              duration,\
              realtime,\
              queue,\
              %cpu,\
              %mem,\
              rss,\
              vmem,\
              rchar,\
              wchar"
}

includeConfig "containers.config"
includeConfig "resources.config"
includeConfig "params.config"
includeConfig "profiles.config"